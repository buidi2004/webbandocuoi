# ============================================
# IVIE Wedding Admin - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ================== API CONNECTION ==================
# Backend API URL (Development)
API_BASE_URL=http://localhost:8000

# Backend API URL (Production - Render)
# API_BASE_URL=https://ivie-backend.onrender.com

# Alternative env var name (for compatibility)
# VITE_API_BASE_URL=http://localhost:8000

# ================== STREAMLIT CONFIG ==================
# Port (default: 8501)
STREAMLIT_SERVER_PORT=8501

# Address (default: localhost)
STREAMLIT_SERVER_ADDRESS=localhost

# Headless mode (for production)
STREAMLIT_SERVER_HEADLESS=false

# ================== DATABASE (Optional) ==================
# If admin needs direct DB access (not recommended, use API instead)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# ================== CLOUDINARY (Optional) ==================
# For image uploads
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ================== REDIS (Optional) ==================
# For session management
# REDIS_URL=redis://localhost:6379
