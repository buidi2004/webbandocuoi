# ============================================
# IVIE Wedding Studio - Admin Panel Environment
# ============================================
# Copy this file to .env and fill in your values

# ================== API CONNECTION ==================
# Backend API URL
API_BASE_URL=http://localhost:8000

# For production (Render)
# API_BASE_URL=https://ivie-backend.onrender.com

# Alternative env var name (for compatibility)
VITE_API_BASE_URL=http://localhost:8000

# ================== ADMIN AUTHENTICATION ==================
# Admin credentials (change these in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/X4.G5C5K5F5F5F5F5

# ================== REDIS CACHE (Optional) ==================
# Enable for better performance in production
REDIS_URL=redis://localhost:6379
# REDIS_URL=redis://user:password@host:port

# ================== CLOUDINARY CDN (Optional) ==================
# For faster image loading via CDN
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ================== STREAMLIT CONFIG ==================
# Server settings (usually set by Dockerfile)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Theme
STREAMLIT_THEME_BASE=dark

# ================== LOGGING ==================
LOG_LEVEL=INFO
